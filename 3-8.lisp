(in-package :cs325-user)

(defun show-list (lst)
  (cond ((atom lst) (format t "~A" lst))
        (t (format t "[")
           (do ((l lst (cdr l)))
               ((atom l)
                (unless (null l)
                  (format t ". ~A" l)))
               (show-list (car l))
               (when (cdr l)
                 (format t " ")))
           (format t "]")))
  nil)
  
(defun show-dots (lst)
  (cond ((null lst) (format t "~A" nil))
        ((atom lst) lst)
        (t (format t "(~A . ~A)" 
                   (generate-dotted-string (car lst))
                   (generate-dotted-string (cdr lst))))))